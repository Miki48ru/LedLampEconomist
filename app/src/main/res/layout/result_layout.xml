<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="25dp"
    android:paddingRight="25dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Subhead"
        android:drawableBottom="@drawable/hor_line"
        android:text="Выгода за первый год" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/hor_line"
        android:id="@+id/imageView" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1000"
            android:layout_weight="1"
            style="@style/EconomyValueOrange"
            android:id="@+id/tv_costs_lamp_1_year" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2000"
            android:layout_weight="1"
            style="@style/EconomyValueGray"
            android:id="@+id/tv_costs_led_1_year" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-1000"
            android:layout_weight="1"
            style="@style/EconomyValueGray"
            android:id="@+id/tv_costs_result_1_year" />
    </LinearLayout>


</LinearLayout>
